<h1 align="center">Create a Power that can make a difference!</h1>

<hr>

<fieldset>
  <legend>Name and Describe the Power</legend>
  <%= form_with model: @power do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>
  <%= f.label :description%>
  <%= f.text_area :description %>
  <%= f.submit %>
  <% end %>
</fieldset>
