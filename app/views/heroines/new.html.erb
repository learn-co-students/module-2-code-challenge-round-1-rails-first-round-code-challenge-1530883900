
<hr>
<h2>Create New Heroine</h2>
<hr>

<%= link_to "Cancel", heroines_path %>
<br>
<br>

<% if flash[:errors] %>
      <ul>
           <% flash[:errors].each do |error| %>
              <li><font color="red"><%= error %></font></li>
           <% end %>
      </ul>
<% end %>

<%= form_with model: @heroine do |f|  %>
  <%= f.label :name %>
  <%= f.text_field :name %> <br>

  <%= f.label :super_name %>
  <%= f.text_field :super_name %> <br>

  Power <%= f.collection_select :power_id, Power.all, :id, :name  %>
  <br>

  <%= f.submit %>
<% end %>
