<h2>All Heroines</h2>

<%= form_tag(heroines_path, method: :get) do %>
<h3><strong>Search By Superpower:(Does Not Work :()</strong></h3>
<%= text_field_tag :power %>
<%= submit_tag 'Search', name: nil %>
<% end %>

<ul>
  <% if params[:power] %>
    <% @power.heroines each do |heroine| %>
      <li>
        <%= link_to heroine.super_name, heroine %>
      </li>
      <br>
      <% end %>
  <% else %>
    <% @heroines.each do |heroine| %>
      <li>
        <%= link_to heroine.super_name, heroine %>
      </li>
      <br>
      <% end %>
  <% end %>
</ul>
