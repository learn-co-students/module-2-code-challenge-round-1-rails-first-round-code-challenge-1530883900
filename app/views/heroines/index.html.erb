<h2>All Heroines</h2>

<%= form_tag("/search", method: "get") do %>
  <%= label_tag(:power, "Search by Super Power:") %>
  <%= chosen_power = collection_select(@heroine, :power_id, Power.all, :id, :name) %>
  <%= submit_tag("Search Heroines") %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>
